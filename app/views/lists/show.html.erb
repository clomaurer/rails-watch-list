<h1>Details of your list</h1>
  <table>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.comment %></td>
        <img src="<%= bookmark.movie.poster_url %>" alt="" width="400">
        <td><%= bookmark.movie.title %></td>
        <td><%= bookmark.movie.rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<%= link_to "Back to list", root_path, class: "btn btn-primary" %>
